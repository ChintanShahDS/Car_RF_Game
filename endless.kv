#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Flag>:
    size: 40, 30
    origin: 995, 95
    canvas:
        PushMatrix
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/flagred.png"
        PopMatrix

<Car>:
    size: 40, 20
    origin: 135, 600
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/rocketship.png"
        PopMatrix

<Ball1>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size
<Ball2>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size

<Ball3>:
    size: 10,10
    canvas:
        Color:
            rgba: 0.48,0.97,0.74,0.3
        Ellipse:
            pos: self.pos
            size: self.size

<Game>:
    car: game_car
    ball1: game_ball1
    ball2: game_ball2
    ball3: game_ball3
    flag: game_flag
    canvas:
        Rectangle:
            pos: self.pos
            size: 1200, 899
            source: "./map/EndlessSpace.jpg"

    Flag:
        id: game_flag
        center: self.parent.center
    Car:
        id: game_car
        center: self.parent.center
    Ball1:
        id: game_ball1
        center: self.parent.center
    Ball2:
        id: game_ball2
        center: self.parent.center
    Ball3:
        id: game_ball3
        center: self.parent.center
